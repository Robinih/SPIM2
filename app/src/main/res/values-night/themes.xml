<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/apk/res/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.SPIM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green_light</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_brown_light</item>
        <item name="colorSecondaryVariant">@color/secondary_brown</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_green</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/text_primary</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Custom attributes -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorAccent">@color/accent_orange</item>
    </style>
</resources>