<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <!-- Header Title -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMART PEST INFESTATION MONITOR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2E2E2E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Subtitle/Description -->
        <TextView
            android:id="@+id/app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identify pests from images to prevent early crop damage."
            android:textSize="13sp"
            android:textColor="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/app_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Image Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_container"
            android:layout_width="320dp"
            android:layout_height="470dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/app_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/place_holder"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <!-- Status -->

        <!-- Buttons Row -->
        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="597dp">

            <Button
                android:id="@+id/btn_load_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#4CAF50"
                android:text="Load Image"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_capture_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:text="Capture Image"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Output -->
        <TextView
            android:id="@+id/output_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detected Pest:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E2E2E"
            android:layout_marginTop="22dp"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@id/button_row"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result here"
            android:textSize="16sp"
            android:textColor="#B71C1C"
            android:textStyle="italic"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/output_label"
            app:layout_constraintTop_toTopOf="@id/output_label"/>

        <!-- Footer Note -->
        <TextView
            android:id="@+id/footer_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap result to search online Â· Helps reduce crop infestation"
            android:textSize="11sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="6dp"
            android:layout_marginStart="36dp"
            app:layout_constraintTop_toBottomOf="@id/output_label"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
