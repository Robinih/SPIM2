<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_modern">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_modern_blue"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="🗺️ Naic Cavite Farm Map"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Map Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface_elevated"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toTopOf="@id/stats_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.cvsuagritech.spim.components.CustomMapView
            android:id="@+id/custom_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp" />

    </androidx.cardview.widget.CardView>

    <!-- Statistics Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stats_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface_elevated"
        app:layout_constraintBottom_toTopOf="@id/farm_list_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 Farm Statistics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_modern_primary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/card_modern_elevated"
                    android:padding="12dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:id="@+id/tv_total_farms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_modern_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Farms"
                        android:textSize="12sp"
                        android:textColor="@color/text_modern_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/card_modern_elevated"
                    android:padding="12dp"
                    android:layout_marginHorizontal="3dp">

                    <TextView
                        android:id="@+id/tv_healthy_farms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_modern_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Healthy"
                        android:textSize="12sp"
                        android:textColor="@color/text_modern_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/card_modern_elevated"
                    android:padding="12dp"
                    android:layout_marginHorizontal="3dp">

                    <TextView
                        android:id="@+id/tv_warning_farms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_modern_orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warning"
                        android:textSize="12sp"
                        android:textColor="@color/text_modern_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/card_modern_elevated"
                    android:padding="12dp"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/tv_critical_farms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_modern_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Critical"
                        android:textSize="12sp"
                        android:textColor="@color/text_modern_secondary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Farm List Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/farm_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface_elevated"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🏡 Farm Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_modern_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_modern_secondary"
                        android:text="🔄 Refresh"
                        android:textColor="@color/accent_modern_blue"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:elevation="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_farm_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading farm data..."
                    android:textSize="14sp"
                    android:textColor="@color/text_modern_secondary"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
