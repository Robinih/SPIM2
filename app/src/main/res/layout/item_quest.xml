<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/surface_elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Quest Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Quest Icon -->
            <ImageView
                android:id="@+id/quest_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_crop_health"
                android:background="@drawable/circle_quest_icon"
                android:padding="6dp" />

            <!-- Quest Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_quest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¾ Rice Crop Analysis"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_modern_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_quest_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyze 3 rice crop images for health assessment"
                    android:textSize="13sp"
                    android:textColor="@color/text_modern_secondary"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Points Badge -->
            <TextView
                android:id="@+id/tv_quest_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/points_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </LinearLayout>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress:"
                    android:textSize="12sp"
                    android:textColor="@color/text_modern_secondary" />

                <TextView
                    android:id="@+id/tv_progress_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/3"
                    android:textSize="12sp"
                    android:textColor="@color/text_modern_secondary"
                    android:gravity="end" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar_quest"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:progressTint="@color/gradient_accent_start"
                android:max="100" />

        </LinearLayout>

        <!-- Quest Status and Action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_quest_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ¯ Tap to Complete"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gradient_accent_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_complete_quest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/gradient_accent_start"
                app:cornerRadius="16dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
