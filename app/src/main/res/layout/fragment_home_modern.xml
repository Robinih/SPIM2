<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_modern"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".fragments.HomeFragment">

        <!-- Modern Hero Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/hero_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_elevated"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@drawable/gradient_modern_primary">

                <!-- Modern App Icon -->
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="🌾"
                    android:textSize="40sp"
                    android:background="@drawable/card_modern_elevated"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:elevation="4dp"
                    android:layout_gravity="center_horizontal" />

                <!-- App Title -->
                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_title"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_horizontal"
                    android:shadowColor="@color/gradient_primary_start"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <!-- App Subtitle -->
                <TextView
                    android:id="@+id/app_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:alpha="0.9"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Collapsible Menu Bar -->
        <com.cvsuagritech.spim.components.CollapsibleMenuBar
            android:id="@+id/collapsible_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/hero_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Image Capture Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface_elevated"
            app:layout_constraintTop_toBottomOf="@id/collapsible_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📸 Crop Image Analysis"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_modern_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Image Container -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/image_container"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/surface_overlay">

                    <ImageView
                        android:id="@+id/ImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/place_holder"
                        android:contentDescription="Crop image"
                        android:background="@drawable/card_modern_elevated" />

                </androidx.cardview.widget.CardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_load_image"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_modern_secondary"
                        android:contentDescription="@string/content_description_gallery"
                        android:drawableStart="@drawable/ic_gallery"
                        android:drawablePadding="8dp"
                        android:text="@string/btn_load_image"
                        android:textColor="@color/gradient_primary_start"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_capture_image"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_modern_primary"
                        android:contentDescription="@string/content_description_camera"
                        android:drawableStart="@drawable/ic_camera"
                        android:drawablePadding="8dp"
                        android:text="@string/btn_capture_image"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Analysis Results Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/results_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface_elevated"
            app:layout_constraintTop_toBottomOf="@id/image_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 Analysis Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_modern_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Results Content -->
                <LinearLayout
                    android:id="@+id/results_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Health Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Health Status:"
                            android:textSize="16sp"
                            android:textColor="@color/text_modern_secondary" />

                        <TextView
                            android:id="@+id/tv_output"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/placeholder_result"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_modern_primary"
                            android:background="@drawable/health_status_healthy"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />

                    </LinearLayout>

                    <!-- Confidence Section -->
                    <LinearLayout
                        android:id="@+id/confidence_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Confidence:"
                                android:textSize="14sp"
                                android:textColor="@color/text_modern_secondary" />

                            <TextView
                                android:id="@+id/confidence_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placeholder_confidence"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/accent_modern_green" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/confidence_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progressTint="@color/accent_modern_green"
                            android:progressBackgroundTint="@color/surface_overlay" />

                    </LinearLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_recommendations"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_modern_accent"
                            android:text="@string/btn_view_recommendations"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:elevation="4dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save_to_logbook"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_modern_secondary"
                            android:text="@string/btn_save_to_logbook"
                            android:textColor="@color/gradient_primary_start"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:elevation="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Placeholder Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select or capture a crop image to begin analysis"
                    android:textSize="16sp"
                    android:textColor="@color/text_modern_hint"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:padding="32dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Features Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/features_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/surface_elevated"
            app:layout_constraintTop_toBottomOf="@id/results_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🚀 Key Features"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_modern_primary"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal" />

                <!-- Features Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- AI Analysis Feature -->
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            layout="@layout/item_feature_card" />

                        <!-- Crop Monitoring Feature -->
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            layout="@layout/item_feature_card" />

                    </LinearLayout>

                    <!-- Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Treatment Recommendations Feature -->
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            layout="@layout/item_feature_card" />

                        <!-- Digital Logbook Feature -->
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            layout="@layout/item_feature_card" />

                    </LinearLayout>

                    <!-- Row 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- LGU Reporting Feature -->
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            layout="@layout/item_feature_card" />

                        <!-- Sustainability Feature -->
                        <include
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            layout="@layout/item_feature_card" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/status_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_ready"
            android:textSize="14sp"
            android:textColor="@color/text_modern_secondary"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/features_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Loading Overlay -->
        <LinearLayout
            android:id="@+id/loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#80000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_analyzing"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
