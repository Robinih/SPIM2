<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/surface_elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Reward Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Reward Icon -->
            <ImageView
                android:id="@+id/reward_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_fertilizer"
                android:background="@drawable/circle_reward_icon"
                android:padding="8dp" />

            <!-- Reward Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reward_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPK Fertilizer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_modern_primary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_reward_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balanced nutrients for rice growth"
                    android:textSize="13sp"
                    android:textColor="@color/text_modern_secondary"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_reward_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¿ Farming Supplies"
                    android:textSize="12sp"
                    android:textColor="@color/gradient_teal_start"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Points Cost -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_reward_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/gradient_primary_start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="points"
                    android:textSize="12sp"
                    android:textColor="@color/text_modern_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Reward Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_reward_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”“ Available"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/status_success" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_unlock_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/gradient_primary_start"
                app:cornerRadius="16dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>