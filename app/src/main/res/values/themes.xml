<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/apk/res/tools">
    <!-- Modern application theme. -->
    <style name="Theme.SPIM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_primary_start</item>
        <item name="colorPrimaryVariant">@color/gradient_primary_end</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_accent_start</item>
        <item name="colorSecondaryVariant">@color/gradient_accent_end</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gradient_primary_start</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/surface_modern</item>
        <item name="colorSurface">@color/surface_elevated</item>
        <item name="colorOnSurface">@color/text_modern_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_modern_primary</item>
        <item name="android:textColorSecondary">@color/text_modern_secondary</item>
        <item name="android:textColorHint">@color/text_modern_hint</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/status_error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Custom attributes -->
        <item name="android:windowBackground">@color/surface_modern</item>
        <item name="android:colorAccent">@color/accent_modern_green</item>
    </style>
    
    <!-- Enhanced button styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Button.Gradient" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_green</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/surface_light</item>
    </style>
    
    <!-- Enhanced card styles -->
    <style name="Card.Elevated" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">12dp</item>
        <item name="cardBackgroundColor">@color/background_white</item>
    </style>
    
    <style name="Card.Modern" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/background_white</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Enhanced text styles -->
    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Enhanced text styles for visual appeal -->
    <style name="TextAppearance.FeatureTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">@color/primary_green_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="TextAppearance.FeatureDescription" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.9</item>
    </style>
    
    <style name="TextAppearance.HeroTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:shadowColor">@color/primary_green_dark</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>
    
    <style name="TextAppearance.HeroSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.95</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:shadowColor">@color/primary_green_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
</resources>